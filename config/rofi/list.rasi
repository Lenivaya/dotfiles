/* list config */

@import "theme"

* {
	window-width:      30%;
	window-padding:    20px 30px;

	list-padding:      0px 0px;

	input-border:      0 0 2px;
	input-margin:      0 0 12px;
	input-padding:     3px 5px;

	entry-margin:      0 3px 0;
	input-padding:     3px 5px;

	element-padding:   3px 5px;
}

#mainbox {
	spacing:      0;
	font:         "Iosevka 8";
}

#window {
	width:          @window-width;
	border:         @window-border;
	padding:        @window-padding;
}

#listview {
	scrollbar:      false;
	vertical-align: 0.5;
}

#inputbar {
	border:           @input-border;
	margin:           @input-margin;
	padding:          @input-padding;
	children:         [ prompt, entry ];
}

#entry {
	margin: @entry-margin;
	background-color: @ibg;
}

#prompt {
	str:              "";
	background-color: @ibg;
	color:            @lpc;
}

#textbox-prompt-colon {
	str:              "";
	str:              "›";
	color:            @lpc;
	expand:           false;
	background-color: @ibg;
}

#element {
	padding:        @element-padding;
}

sidebar {
	color:          @fg;
}
