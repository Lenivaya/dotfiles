# reload congiguration
super + Escape
    pkill -USR1 -x sxhkd

# screencasting
super + Print
    scrrec -s ~/recordings/$(date +%F-%T).mp4

super + ctrl + Print
    scrrec -s ~/recordings/$(date +%F-%T).gif

# launch apps with super + <shift> keypad
super + KP_Left
    alacritty -e ranger

super + shift + KP_Left
    alacritty -e nnn

super + KP_Home
    alacritty -e tmux

# XF86Audio{LowerVolume,RaiseVolume,Mute,MicMute}
#     volumedunst {down,up,mute,mic_mute}

XF86Audio{LowerVolume,RaiseVolume,Mute,MicMute}
    volumectl {-u down,-u up,toggle-mute,-m toggle-mute}

XF86MonBrightness{Up,Down}
    lightctl {up,down}

XF86Display
    auto_brightness_toggle

XF86Search
    rofi_drun
    # rofi -show drun

XF86LaunchA
    rofi_windows

XF86Explorer
    nautilus

ctrl + XF86Audio{LowerVolume,RaiseVolume,Mute}
    playerctl --player playerctld {previous,next,play-pause}

ctrl + {Delete,End,Escape}
    dunstctl {close,close-all,history-pop}

# Expose windows
# XF86Tools
#     skippy-xd
XF86Tools
    keyboard-switch

alt + space
    keyboard-switch
